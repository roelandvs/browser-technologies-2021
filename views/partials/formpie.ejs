            <input type="radio" name="kwaliteit" id="kwaliteit-10" value="10" required>
            <label for="kwaliteit-10">10</label>
        </div>
    </fieldset>

    <fieldset>
        <legend>Opmerking</legend>
        <p class="legend-subtitle"><%= data.full_name %> (4/4)</p>

        <label for="toevoeging">Wil je nog iets toevoegen?</label>
        <textarea name="toevoeging" id="toevoeging" cols="30" rows="10" required></textarea>
        <input type="submit" value="Submit">
    </fieldset>
</form> 